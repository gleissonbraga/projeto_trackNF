{
    "compilerOptions": {
      "target": "es2020",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true, 
      "typeRoots": ["./src/@types", "./node_modules/@types"] 
    },
    "include": ["src/**/*", "src/@types"],
    "exclude": ["node_modules"],
}